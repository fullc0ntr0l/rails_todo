<h1>Todo tasks</h1>

<%= link_to 'New Todo', new_todo_path %>

<br />
<br />

<table>
<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.task %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Remove', todo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
